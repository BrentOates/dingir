{
	"name": "dingir",
	"author": "Brent Oates",
	"repository": {
		"type": "git",
		"url": "https://github.com/BrentOates/dingir.git"
	},
	"version": "2.5.7",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc",
		"postbuild": "copyfiles -u 1 -e \"**/*.ts\" \"src/**/*\" dist/src/",
		"lint": "eslint . --ext .ts",
		"dev": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"npm run copy-and-start\"",
		"copy-and-start": "npm run postbuild && npm start",
		"start": "node dist/src/index.js"
	},
	"dependencies": {
		"@discordjs/rest": "^2.3.0",
		"@napi-rs/canvas": "^0.1.54",
		"discord.js": "^14.15.3",
		"dotenv": "^16.4.5",
		"luxon": "^3.5.0",
		"node-schedule": "^2.1.1",
		"reflect-metadata": "^0.2.2",
		"sequelize": "^6.37.3",
		"sequelize-typescript": "^2.1.6",
		"sqlite3": "^5.1.7",
		"tslib": "^2.6.3",
		"underscore": "^1.13.7"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/luxon": "^3.4.2",
		"@types/node": "^22.4.2",
		"@types/node-schedule": "^2.1.7",
		"@types/underscore": "^1.11.15",
		"@types/validator": "^13.12.0",
		"@typescript-eslint/eslint-plugin": "^8.2.0",
		"@typescript-eslint/parser": "^8.2.0",
		"copyfiles": "^2.4.1",
		"eslint": "^8.57.0",
		"rimraf": "^6.0.1",
		"tsc-watch": "^6.2.0",
		"typescript": "^5.5.4"
	},
	"overrides": {
		"@mapbox/node-pre-gyp": {
			"make-dir": "4.0.0"
		}
	}
}