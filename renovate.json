{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "packageRules": [
      {
        "packageNames": ["node"],
        "enabled": false
      },
      {
          "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
          "automerge": true
      },
      {
          "matchDepTypes": ["devDependencies"],
          "automerge": true
      }
  ],
  "platformAutomerge": true
}
